# =============================================================================
# Testing Environment Configuration
# =============================================================================
# This file contains testing-specific settings
# Copy to .env for testing: cp env.testing .env

# Environment
ENVIRONMENT=testing
DEBUG=true
TESTING=true

# Database (separate test database)
DATABASE_URL=postgresql://test_user:test_password@localhost:5432/ebooks_test
DB_POOL_SIZE=2
DB_MAX_OVERFLOW=5
DB_POOL_TIMEOUT=10
DB_POOL_RECYCLE=300

# Security (test-specific)
SECRET_KEY=test_secret_key_for_testing_only_32_characters_min
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=5
REFRESH_TOKEN_EXPIRE_DAYS=1
BCRYPT_ROUNDS=4

# CORS (minimal for testing)
ALLOWED_ORIGINS=http://localhost:3000

# File Upload
UPLOAD_MAX_SIZE=10MB
ALLOWED_FILE_EXTENSIONS=.epub
UPLOAD_DIR=test_uploads
TEMP_DIR=test_temp
ENABLE_COMPRESSION=false

# Logging
LOG_LEVEL=ERROR
LOG_FILE_PATH=
LOG_MAX_SIZE=1MB
LOG_BACKUP_COUNT=1

# Redis (separate test database)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=2
REDIS_MAX_CONNECTIONS=2

# Cache
CACHE_ENABLED=false
CACHE_DEFAULT_TTL=60
CACHE_MAX_SIZE=10
CACHE_STRATEGY=lru

# API
APP_TITLE=Liminal eBook Manager (Test)
APP_VERSION=1.0.0-test
APP_DESCRIPTION=A modern ebook management system - Testing
API_DOCS_URL=/docs
API_REDOC_URL=/redoc
API_OPENAPI_URL=/openapi.json
HOST=0.0.0.0
PORT=8001
WORKERS=1

# Frontend
REACT_APP_API_URL=http://localhost:8001
REACT_APP_VERSION=1.0.0-test

# Testing Features
AUTO_RELOAD=false
DETAILED_ERRORS=true 