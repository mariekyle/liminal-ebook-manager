# =============================================================================
# Liminal eBook Manager - Environment Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment
# cp env.example .env

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
# Set the environment: development, staging, production, testing
ENVIRONMENT=development

# Enable debug mode (not recommended for production)
DEBUG=false

# Enable testing mode
TESTING=false

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string
DATABASE_URL=postgresql://ebook_user:your_secure_password_here@localhost:5432/ebooks

# Database connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Secret key for JWT tokens and encryption (minimum 32 characters)
SECRET_KEY=your_super_secret_key_here_minimum_32_characters_long_for_security

# JWT configuration
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password hashing
BCRYPT_ROUNDS=12

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://10.0.0.163:3000

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
# Maximum file size for uploads
UPLOAD_MAX_SIZE=100MB

# Allowed file extensions (comma-separated)
ALLOWED_FILE_EXTENSIONS=.epub

# Upload directories
UPLOAD_DIR=uploads
TEMP_DIR=temp

# Enable file compression
ENABLE_COMPRESSION=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (optional, leave empty for console only)
LOG_FILE_PATH=

# Log rotation settings
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis connection URL
REDIS_URL=redis://localhost:6379

# Redis connection details
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=10

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Enable caching
CACHE_ENABLED=true

# Cache TTL in seconds
CACHE_DEFAULT_TTL=3600

# Cache size limit
CACHE_MAX_SIZE=1000

# Cache strategy: lru, lfu, fifo
CACHE_STRATEGY=lru

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Application metadata
APP_TITLE=Liminal eBook Manager
APP_VERSION=1.0.0
APP_DESCRIPTION=A modern ebook management system

# API documentation URLs
API_DOCS_URL=/docs
API_REDOC_URL=/redoc
API_OPENAPI_URL=/openapi.json

# Server configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# API URL for frontend
REACT_APP_API_URL=http://localhost:8000

# Frontend version
REACT_APP_VERSION=1.0.0

# =============================================================================
# PRODUCTION SETTINGS (override for production)
# =============================================================================
# Uncomment and configure these for production deployment

# ENVIRONMENT=production
# DEBUG=false
# SECRET_KEY=your_production_secret_key_here_minimum_32_characters
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# REACT_APP_API_URL=https://api.yourdomain.com
# LOG_LEVEL=WARNING
# LOG_FILE_PATH=/var/log/liminal/app.log
# REDIS_URL=redis://your-redis-server:6379
# REDIS_PASSWORD=your_redis_password
# DATABASE_URL=postgresql://user:password@your-db-server:5432/ebooks

# =============================================================================
# SSL CONFIGURATION (for production with HTTPS)
# =============================================================================
# SSL certificate paths (for nginx reverse proxy)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# =============================================================================
# MONITORING & HEALTH CHECKS
# =============================================================================
# Health check endpoint
HEALTH_CHECK_URL=/health

# Metrics endpoint
METRICS_URL=/metrics

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================
# Backup directory
BACKUP_DIR=/var/backups/liminal

# Maintenance mode
MAINTENANCE_MODE=false

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable auto-reload (development only)
AUTO_RELOAD=true

# Enable detailed error messages (development only)
DETAILED_ERRORS=true

# =============================================================================
# TESTING SETTINGS
# =============================================================================
# Test database URL
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/test_ebooks

# Test secret key
TEST_SECRET_KEY=test_secret_key_for_testing_only_32_chars_min 